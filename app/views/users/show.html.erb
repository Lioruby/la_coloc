<div class="bg-gray-800 flex justify-center h-64">
  <div class="flex flex-col text-center text-white rounded-lg">
    <h1 class="pt-24 pb-10 font-bold text-2xl  tracking-wide">Profil</h1>
    <%= cl_image_tag current_user.photo.key, class:"border-solid border-2 border-blue-200 w-36 h-36 rounded-full" %>
    <span class="pt-2 text-black font-bold text-xs uppercase tracking-wide"><%= current_user.first_name %></span>
  </div>
</div>

<div class="grid grid-cols-3 pt-16 px-2">
  <div class="px-2">
    <h4 class="pb-4 text-black font-bold text-xs uppercase tracking-wide">Classement</h4>
    <% current_user.preferences.each_with_index do |preference, i| %>
    <div class="px-4 py-6">
    <span class="text-sm font-semibold"> <%= i + 1  %> - </span>
    </div>
    <% end %>
  </div>
  <div class="py-8 px-2 w-full col-span-2" data-controller="preference" data-preference-url="/users/:id/move">
    <% current_user.preferences.sort_by(&:position).each do |preference| %>
        <div data-id="<%= current_user.id %>" class="py-2 text-center">
            <h4 class="border-solid border-2 border-yellow-500 hover:bg-yellow-600 bg-blue-200 px-4 py-4 rounded-lg font-bold text-sm uppercase tracking-wide">
              <%= preference.task.name %>
            </h4>
        </div>
    <% end %>
  </div>
</div>
<%= render 'shared/navigation_footer' %>
