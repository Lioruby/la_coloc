<div class="bg-gray-800 flex justify-center h-64">
  <div class="flex flex-col text-center text-white rounded-lg">
    <h1 class="pt-24 pb-12 font-bold text-2xl  tracking-wide">Profil</h1>
    <%= image_tag "toto.jpeg", class:"border-solid border-2 border-blue-200 w-36 h-36 rounded-full" %>
    <span class="pt-2 text-black font-bold text-xs uppercase tracking-wide"><%= current_user.first_name %></span>
  </div>
</div>

<div class="pt-24 px-4">
</div>
  <div data-controller="preference" data-preference-url="/users/:id/move">
    <% current_user.preferences.sort_by(&:position).each do |preference| %>
        <div data-id="<%= current_user.id %>" class="flex flex-col text-center pt-2 pb-8 px-24 gap-4">
            <h4 class="border-solid border-2 border-yellow-500 hover:bg-yellow-600 bg-blue-200 px-4 py-4 rounded-lg font-bold text-sm uppercase tracking-wide">
              <%= preference.task.name %>
            </h4>
        </div>
    <% end %>
  </div>

<%= render 'shared/navigation_footer' %>
