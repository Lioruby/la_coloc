<%= render 'shared/task_tabs' %>

<div class="bg-gray-800 text-center">
  <div>
    <h1 class="text-white py-4 font-bold text-xl tracking-wide">Tâches en cours...</h1>
  </div>

  <div class="supergrid pt-2 pb-4 px-6">
    <% current_colocation.tasks.each do |task| %>
    <div class="supergriditem justify-center font-bold text-xs uppercase tracking-wide text-white rounded-full bg-yellow-500 px-2 py-2 hover:bg-blue-200 hover:text-black">
    <span><%= link_to task_path(task), class: '' do %>
      <%= task.name %></span>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="bg-gray-800 p-4 flex items-center justify-center">

  <%= simple_form_for([@colocation, @task]) do |f| %>
    <%= f.error_notification %>

    <div class="bg-gray-200 p-3 text-center border rounded shadow-md bg-center">
      <h2 class="text-center font-bold text-lg text-gray-800 pb-4">
        Nouvelle Tâche
      </h2>
      <div class="text-left">
        <%= f.input :name,
        label: 'Nom de la tâche',
        placeholder: 'Vaisselle, Ménage ...',
        input_html: { class: "block bg-gray-100 px-3 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
        label_html: { class: 'text-gray-700 text-sm' } %>
      <%= f.input :description,
                  label: 'Description',
                  placeholder: "Il faut faire la vaisselle d'hier",
                  input_html: { class: "block bg-gray-100 px-3 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' }%>
      <%= f.input :duration,
                  label: 'Durée estimée en minutes',
                  placeholder: '15',
                  input_html: { class: "block bg-gray-100 px-3 py-2 text-sm border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' },
                  hint_html: { class: 'text-xs text-gray-400 mb-3 italic' } %>

      <%= f.input :recurrence,
                  collection: ['quotidien', 'hebdomadaire', 'mensuel'],
                  label: 'Récurrence',
                  input_html: { class: "block bg-gray-100 px-3 py-2 text-sm border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' },
                  hint_html: { class: 'text-xs text-gray-400 mb-3 italic' } %>

      </div>
      <div class="pt-4 pb-12">
        <%= f.button :submit, "Ajouter",
        class: "inline-block px-5 py-2 rounded-lg bg-yellow-500 text-white uppercase tracking-wide font-semibold text-sm" %>
      </div>
    </div>
  <% end %>
</div>


<%= render 'shared/navigation_footer' %>

