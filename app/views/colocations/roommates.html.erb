<%= render 'shared/home_tabs' %>

<div class="rounded-t-3xl bg-blue-200 mt-6 flex flex-col gap-4 items-center text-center py-4 mx-8 border-solid border-b-2 border-gray-400 border-opacity-30">
  <h1 class="text-lg font-semibold py-8"> <%= current_colocation.name %> </h1>
  <%= image_tag "team.svg", class:"w-44 h-44" %>
  <h3 class="text-gray-800 font-bold text-xs uppercase tracking-wide">Participants</h3>


<div class="flex py-6">
  <% current_colocation.users.each do | user | %>
  <div class="flex flex-col w-full text-black items-center px-3 py-4 pl-4">
    <%= cl_image_tag user.photo.key, class:" border-solid border-2 border-blue-200 w-12 h-12 rounded-full" %>
    <span class="pt-2 text-gray-800 font-bold text-xs uppercase tracking-wide"> <%= user.first_name %> </span>
  </div>
  <% end %>
</div>
</div>


<div class="-mt-4 rounded-t-3xl bg-white flex flex-col gap-4 items-center text-center py-4 mx-8 border-solid border-b-2 border-gray-400 border-opacity-30">
  <h1 class="text-lg font-semibold"> Statistiques </h1>
  <%= image_tag "stats_fun.svg", class:"w-44 h-44" %>


<div class="mb-16"></div>
</div>

<%= render 'shared/navigation_footer' %>
