<%= render 'shared/home_tabs' %>

<div class="px-auto text-center py-8">
  <h1> <%= current_colocation.name %> </h1>
  <h3>Participants</h3>
</div>

<div class="flex  flex-col gap-6 px-8">
  <% current_colocation.users.each do | user | %>
  <div class="flex justify-between text-white items-center px-3 py-4 pl-4 bg-blue-200 shadow-lg">
    <%= cl_image_tag user.photo.key, class:"mr-4 border-solid border-2 border-blue-200 w-12 h-12 rounded-full" %>
    <%= user.first_name %>
  </div>
  <% end %>
</div>

<%= render 'shared/navigation_footer' %>
