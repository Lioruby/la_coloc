<% content_for :title, "Rejoindre" %>


<div class="p-10">
  <div class="flex justify-between align-middle">
    <% @colocation.users.each do |user| %>
    <div>
        <%= cl_image_tag user.photo.key, class: "ml-2 border-solid border-2 border-blue-200 w-12 h-12 rounded-full" %>
        <p class="text-center"><%= user.name %></p>
    </div>
    <% end %>
  </div>
  <div id="js-chargement" class="mt-10 p-3 bg-yellow-500 rounded-full w-5 h-5 flex justify-center">
  </div>
  <div class="flex justify-center">
    <%= cl_image_tag current_user.photo.key, class: "mt-3 ml-2 border-solid border-2 border-blue-200 w-12 h-12 rounded-full" %>
  </div>
  <div class="flex justify-center mt-10">
    <%= link_to "Rejoindre #{@colocation.name}", colocation_create_roomates_path(@colocation), method: :post,
    class: 'inline-block px-5 py-2 rounded-lg bg-yellow-500 text-white uppercase tracking-wide font-semibold text-sm'  %>
  </div>
</div>
