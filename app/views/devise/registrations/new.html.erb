<div class="bg-gray-800 p-3 h-screen flex items-center justify-center">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="bg-gray-200 p-4 text-center border rounded shadow-md bg-center">
      <h2 class="text-center font-bold text-xl text-gray-800">
        Inscription
      </h2>
      <div class="text-left">
        <%= f.input :first_name,
        label: 'Prénom',
        placeholder: 'ex: Jean-Michel',
        input_html: { class: "block bg-gray-100 px-4 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
        label_html: { class: 'text-gray-700 text-sm' } %>
      <%= f.input :email,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: 'Email',
                  placeholder: 'Email',
                  input_html: { class: "block bg-gray-100 px-2 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' }%>
      <%= f.input :password,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: 'Mot de passe',
                  placeholder: 'Mot de passe',
                  input_html: { class: "block bg-gray-100 px-2 py-2 text-sm border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' },
                  hint_html: { class: 'text-xs text-gray-400 mb-3 italic' } %>
      <%= f.input :password_confirmation,
                  input_html: { autocomplete: "new-password" },
                  label: 'Confirmation mot de passe',
                  placeholder: 'Confirmation du mot de passe',
                  input_html: { class: "block bg-gray-100 px-2 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' } %>

      </div>
      <div class="p-5">
        <%= f.button :submit, "Inscription",
        class: "inline-block px-5 py-2 rounded-lg bg-yellow-500 text-white uppercase tracking-wide font-semibold text-sm" %>
      </div>
    </div>
  <% end %>
</div>
