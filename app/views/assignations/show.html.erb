<% content_for :title, "Modification tâche" %>

<div class="bg-gray-800 p-4 h-screen -mt-20 flex items-center justify-center">



  <%= simple_form_for(@assignation, url: update_before_photo_assignation_path, method: :post)  do |f| %>
    <%= f.error_notification %>

    <div class="bg-gray-200 p-2 text-center border rounded shadow-md bg-center">
      <h2 class="pb-4 pt-1 text-center font-bold text-lg text-gray-800">
        Modifie la Tâche
      </h2>
      <div class="text-left ">
        <%= f.association :user,
        label: 'Qui?',
        input_html: { class: "block bg-gray-100 px-3 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
        label_html: { class: 'text-gray-700 text-sm' } %>
      <%= f.input :name,
                  label: 'Tâche :',
                  placeholder: "Acheter le pain",
                  input_html: { class: "block bg-gray-100 px-3 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' }%>
      <%= f.input :date,
                  label: 'Choisis un jour :',
                  input_html: { class: "block bg-gray-100 px-3 py-2 text-sm border border-gray-200 rounded w-80" },
                  label_html: { class: 'text-gray-700 text-sm' },
                  hint_html: { class: 'text-xs text-gray-400 mb-3 italic' } %>
      </div>
      <div class="pt-4 pb-4">
        <%= f.button :submit, "Modifier",
        class: "inline-block px-5 py-2 rounded-lg bg-yellow-500 text-white uppercase tracking-wide font-semibold text-sm" %>
      </div>
      <div>
        <%= link_to colocation_path(current_colocation), class: "inline-block px-5 py-2 rounded-lg bg-blue-500 text-white uppercase tracking-wide font-semibold text-sm" do %>
          <span>Retour</span>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
