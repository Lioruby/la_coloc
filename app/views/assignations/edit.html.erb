<div class="bg-gray-800 px-8 py-8 h-screen ">
  <div class="bg-gray-200 px-4 py-4 text-center border rounded-3xl shadow-md bg-center">
    <h2 class="text-center font-bold text-xl text-gray-800">
      Tape ta meilleure pose !
    </h2>
    <div class="text-left">
      <%= simple_form_for @assignation do |f| %>
      <div class="flex justify-center my-6">
        <%= f.input :photo, as: :file,
                    id: "file-upload",
                    label: '&nbsp;'.html_safe,
                    label_html:
                    {
                      class: 'fa fa-camera custom-file-upload mb-2 py-2 px-10 shadow-md text-xl bg-gray-400 rounded text-gray-200'
                    } %>
      </div>
      <div class="flex justify-center my-2">
        <%= f.submit 'Valider',
                      method: :patch,
                      class: 'inline-block px-5 py-2 rounded-lg bg-yellow-500 text-white uppercase tracking-wide font-semibold text-sm' %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="pt-12 px-4 mr-2">
    <%= image_tag "photo.svg", class:"" %>
  </div>
</div>
