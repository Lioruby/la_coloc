<div class="md:container">
  <% @assignations.each do |assignation| %>
    <% if assignation.statut == true %>
      <div class="px-4 m-2 border-2 bg-gray-300 rounded-lg text-gray-500">
        <div class="history-avatar">
          <%= cl_image_tag assignation.user.photo.key, class: 'avatar' %>
        </div>
        <div class="flex justify-between">
          <div>
            <p>
              <%= assignation.user.first_name %>
              à bien bosser, voici la preuve
            </p>
          <div class="w-40">
            <% if assignation.photo.attached? %>
              <%= cl_image_tag assignation.photo.key, class: "rounded" %>
            <% end %>
          </div>
          </div>
        </div>
          <div class="items-end">
            <p>Tâche réalisée:  
              <% if assignation.task == nil %>
                <%= assignation.name %>
              <% else  %>
                <%= assignation.task.name  %></span>
              <% end %>
            <p>
          </div>
      </div>
    <% end %>
  <% end %>
</div>



<%= render 'shared/navigation_footer' %>
