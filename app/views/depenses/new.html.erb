<div class="bg-gray-800 p-4 flex items-center justify-center h-screen">

  <%= simple_form_for(@depense) do |f| %>
    <%= f.error_notification %>

    <div class="bg-gray-200 p-3 -mt-32 text-center border rounded shadow-md bg-center">
      <h2 class="text-center font-bold text-lg text-gray-800 pb-4">
        Nouvelle dépense
      </h2>
      <div class="text-left">
        <%= f.input :name,
                    label: 'Nom de la dépense',
                    placeholder: 'Franprix, Tournée ...',
                    input_html: { class: "block bg-gray-100 px-3 py-2 text-sm mb-3 border border-gray-200 rounded w-80" },
                    label_html: { class: 'text-gray-700 text-sm' } %>
        <%= f.input :montant,
                    label: 'Montant',
                    input_html: { class: "block bg-gray-100 px-3 py-2 text-sm mb-10 border border-gray-200 rounded w-80" },
                    label_html: { class: 'text-gray-700 text-sm' }%>

        <%= f.association :user, as: :radio_buttons, collection: current_colocation.users, legend_tag: false,
                               label_method: lambda {|user| cl_image_tag user.profil, class: 'w-16  rounded-full' }

      %>
      </div>

      <div class="pt-12 pb-12">
        <%= f.button :submit, "Ajouter",
        class: "inline-block px-5 py-2 rounded-lg bg-yellow-500 text-white uppercase tracking-wide font-semibold text-sm" %>
      </div>
    </div>
  <% end %>
</div>
<%= render 'shared/navigation_footer' %>

