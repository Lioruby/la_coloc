      <div>
        <%= link_to colocation_path(current_colocation), class: "#{nav_active_class_for('colocations','show')}" do %>
          <i class="fas fa-home"></i>
        <% end %>
      </div>
      <div>
        <%= link_to users_path, class: "#{nav_active_class_for('users','index')}" do  %>
