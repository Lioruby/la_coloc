<footer>
  <div class="w-screen px-4 py-2 bg-gray-800 text-white fixed bottom-0">
    <div class="flex justify-around">
      <div>
        <%= link_to colocation_path(current_colocation), class: "#{nav_active_class_for('colocations','show')} #{nav_active_class_for('colocations','roommates')}" do %>
          <i class="fas fa-home"></i>
        <% end %>
      </div>
      <div>
        <%= link_to assignations_path, class: "#{nav_active_class_for('assignations','index')}" do  %>
          <i class="fas fa-history"></i>
        <% end %>
      </div>
      <div>
        <%= link_to tasks_path(current_colocation), class: "#{nav_active_class_for('tasks','index')}" do %>
          <i class="fas fa-tasks"></i>
        <% end %>
      </div>
      <div>
        <%= link_to new_task_path, class: "#{nav_active_class_for('tasks','new')} #{nav_active_class_for('tasks','occasionnel')}" do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
      <div>
        <%= link_to user_path(current_user), class: "#{nav_active_class_for('users','show')}" do  %>
          <i class="far fa-user"></i>
        <% end %>
      </div>
    </div>
  </div>
